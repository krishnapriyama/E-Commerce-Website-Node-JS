              </form>
            </div>

            <div class="col-12 mb-3 mb-md-0 col-md-4 order-1 order-md-2 text-center">
              <div class="site-logo">
                {{#if user}}
                <a href="/homepage" class="js-logo-clone" style="text-decoration: none;">PHONO-MART</a>
                {{else}}
                <a href="/homepage" class="js-logo-clone" style="text-decoration: none;">PHONO-MART</a>
                {{/if}}
              </div>
            </div>

            <div class="col-6 col-md-4 order-3 order-md-3 text-right">
              <div class="site-top-icons">
                <ul>

                  {{#if user}}
                  <li><a href="/profile"><span class='fa fa-user-tag' style="text-decoration: none;"> &nbsp;
                        {{user.fname}}</span></a></li>
                  {{else}}
                  <li><a href="/login"><span class='fa fa-user-tag' style="text-decoration: none;"></span></a></li>
                  {{/if}}

                  <li><a href="#"><span class='fa fa-heart-o'></span></a></li>

                  <li>
                    {{#if user}}
                    <a href="/cart" class="site-cart">
                      <span class="fa fa-cart-shopping"></span>
                      <span class="count" id="cartCount">{{cartCount}}</span>
                      {{else}}
                      <a href="/cart" class="site-cart">
                        <span class="fa fa-cart-shopping"></span>
                        {{/if}}
                      </a>
                  </li>

                  {{#if user}}
                  <li><a href="/logout"><span class=' fa fa-arrow-right-from-bracket'> LOGOUT</span></a></li>
                  {{else}}
                  <li><a href="/login"><span class='fa fa-right-to-bracket'>LOGIN</span></a></li>
                  {{/if}}
                </ul>
              </div>
            </div>

          </div>
        </div>
