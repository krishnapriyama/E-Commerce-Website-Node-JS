<section>
   <center>
      <h3 class="mt-5">
         LIST OF USERS
      </h3>
   </center>
   <div class="container ml-5" style="width: 75rem;">
      <div>
         <a href="/admin/addusers" class="btn float-right mb-5" style="background-color: #FB641B; color: white;">ADD
            USERS</a>
      </div>
      <table class="table mt-5" id="mytbl">
         <thead>
            <tr>
               <th scope="col">Sl.No</th>
               <th scope="col">First Name</th>
               <th scope="col">Email</th>
               <th scope="col">Place</th>
               <th scope="col">Password</th>
               <th scope="col">Status</th>

            </tr>
         </thead>
         <tbody>
            {{#each users}}
            <tr>
               <th scope="row">1</th>
               <td>{{this.fname}}</td>
               <td>{{this.email}}</td>
               <td>{{this.place}}</td>
               <td style="font-size: 5px;">{{this.password}}</td>
               <td>
                  <a href="/admin/delete/{{this._id}}" style="width:80px; background-color: #FB641B; color: white;"
                     class="btn">DELETE</a>
                  <a href="/admin/editusers/{{this._id}}" style="width:60px; background-color: #FB641B; color: white;"
                     class="btn">EDIT</a> <br>
                  <div class="mt-3">
                     {{#if this.blocked}}
                     <a href="/admin/Unblock_user/{{this._id}}" style="width:100px;  background-color: #FB641B; color: white; margin-left: 29px;" class="btn ">UNBLOCK</a>
                     {{else}}
                     <a href="/admin/block_user/{{this._id}}" style="width:100px; background-color: #FB641B; color: white; margin-left: 29px;" class="btn">BLOCK</a>
                     {{/if}}
                  </div>
               </td>
            </tr>
            {{/each}}
         </tbody>
      </table>
   </div>
</section>