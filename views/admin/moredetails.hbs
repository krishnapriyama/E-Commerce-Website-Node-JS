<section class="text-center me-auto">
   <center>
      <h3 class="mt-5">
         DETAILS PRODUCTS
      </h3>
   </center>
   <section>
      <div class=" text-center">
         <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl p-5">
               <div class="text-black row justify-content-center">
                  <img style="width:30%; height:424px;" class="mb-2 p-4"
                     src="/product-images/{{productdetails._id}}1.png" alt="">
                  <img style="width:30%; height:424px;" class="mb-2 p-4"
                     src="/product-images/{{productdetails._id}}2.png" alt="">
                  <img style="width:30%; height:424px;" class=" p-4" src="/product-images/{{productdetails._id}}3.png"
                     alt="">
                  <div class="card-body">
                     <div class="text-center">
                        <h5 class="card-title">{{productdetails.name}}</h5>
                        <p class="text-muted mb-4">{{productdetails.type}}</p>
                     </div>
                     <div>
                        <div class="d-flex justify-content-between">
                           <span>Model Number</span><span>{{productdetails.modelnumber}}</span>
                        </div>
                        <div class="d-flex justify-content-between">
                           <span>Stock</span><span>{{productdetails.stock}}</span>
                        </div>
                        <div class="d-flex justify-content-between">
                           <span>ModelName</span><span>{{productdetails.modelname}}</span>
                        </div>
                        <div class="d-flex justify-content-between">
                           <span>Series</span><span>{{productdetails.series}}</span>
                        </div>
                        <div class="d-flex justify-content-between">
                           <span>BatteryBackup</span><span>{{productdetails.batterybackup}}</span>
                        </div>
                        <div class="d-flex justify-content-between">
                           <span>Suitable For</span><span>{{productdetails.suitablefor}}</span>
                        </div>
                        <div class="d-flex justify-content-between">
                           <span>ModelName</span><span>{{productdetails.modelname}}</span>
                        </div>
                        <div class="d-flex justify-content-between">
                           <span>ModelName</span><span>{{productdetails.modelname}}</span>
                        </div>
                     </div>
                     <div class="d-flex justify-content-between total font-weight-bold mt-4">
                        <span>Total</span><span>{{productdetails.price}}</span>
                     </div>
                     <div class="d-flex justify-content-between total font-weight-bold mt-4">
                        <span>Category Offer Amount</span><span>{{productdetails.offerAmount}}</span>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </section>
</section>