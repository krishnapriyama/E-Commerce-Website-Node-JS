<div class="px-4 px-lg-0">
  <div class="pb-5">
    <div class="container mt-5">
      <div class="row">
        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

          <!-- Shopping cart table -->
            {{#if products}}
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col" class="border-0 bg-light">
                    <div class="p-2 px-3 text-uppercase text-center">Product</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase text-center">Price</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase text-center">Quantity</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase text-center">Remove</div>
                  </th>
                </tr>
              </thead>
              <tbody>
                {{#each products}}
                <tr class="text-center">
                  <th scope="row" class="border-0">
                    <div class="p-2">
                      <img src="/product-images/{{this.product._id}}.png" style="width:80px; height:80px;" alt=""
                        class="img-fluid rounded shadow-sm">
                      <div class="ml-3 d-inline-block align-middle">
                        <h5 class="mb-0" style="width: 450px;"> <a href="#"
                            class="text-dark d-inline-block text-decoration-none align-middle">{{this.product.name}}</a>
                        </h5><span class="text-muted font-weight-normal font-italic d-block">Category:
                          {{this.product.type}}</span>
                      </div>
                    </div>
                  </th>
                  <td class="border-0 align-middle"><strong>Rs - {{this.product.price}}/-</strong></td>
                  <td class="border-0 align-middle">
                    <center>
                      <div class="input-group mb-3" style="max-width: 120px;">
                        <div class="input-group-prepend">
                          <button class="btn btn-outline-dark js-btn-minus" type="button"
                            onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)">&minus;</button>
                        </div>
                        {{!-- <span id="{{this.product._id}}" class="form-control text-center">
                          {{this.quantity}}
                        </span> --}}
                        <input type="number" class="form-control text-center" value="{{this.quantity}}" placeholder=""
                          id="{{this.product._id}}" aria-label="Example text with button addon"
                          aria-describedby="button-addon1">
                        <div class="input-group-append">
                          <button class="btn btn-outline-dark js-btn-plus" type="button"
                            onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)">&plus;</button>
                        </div>
                      </div>
                    </center>

                  </td>
                  <td class="border-0 align-middle"><a href="#" class="text-dark" onclick="removeProducts('{{this._id}}','{{this.product._id}}')"><i class="fa fa-trash"></i></a></td>
                </tr>
                {{/each}}
              </tbody>
            </table>
            
          </div>
          <!-- End -->
        </div>
      </div>

      <div class="row py-5 p-4 bg-white rounded shadow-sm">
        <div class="col-lg-6">
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Coupon code</div>
          <div class="p-4">
            <p class="font-italic mb-4">If you have a coupon code, please enter it in the box below</p>
            <div class="input-group mb-4 border rounded-pill p-2">
              <input type="text" placeholder="Apply coupon" aria-describedby="button-addon3"
                class="form-control border-0">
              <div class="input-group-append border-0">
                <button id="button-addon3" type="button" class="btn btn-dark px-4 rounded-pill "><i
                    class="fa fa-gift mr-2"></i>Apply coupon</button>
              </div>
            </div>
          </div>
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold ">Instructions for seller</div>
          <div class="p-4">
            <p class="font-italic mb-4">If you have some information for the seller you can leave them in the box below
            </p>
            <textarea name="" cols="30" rows="2" class="form-control border-dark"></textarea>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Order summary </div>
          <div class="p-4">
            <p class="font-italic mb-4">Shipping and additional costs are calculated based on values you have entered.
            </p>
            <ul class="list-unstyled mb-4">
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Order Subtotal
                </strong><strong>$390.00</strong></li>
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Shipping and
                  handling</strong><strong>$10.00</strong></li>
              <li class="d-flex justify-content-between py-3 border-bottom"><strong
                  class="text-muted">Tax</strong><strong>$0.00</strong></li>
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Total</strong>
                <h5 class="font-weight-bold">RS <span id="total">{{totalValue}}.00</span></h5>
              </li>
            </ul><a href="/place-order" class="btn btn-dark rounded-pill py-2 btn-block">Place Order</a>
          </div>
        </div>
      </div>

    </div>
    {{else}}
            <section class="cart-area pt-5 pb-50 text-center">
            <img src="/images/cartemptyimage.png" alt="" style="width:50%;">
            <div class="container mt-4">
              <h1 class="text-center">No Added Items in Your Cart</h1>
              {{#if user}}
              <a href="/homepage" class="btn btn-dark mx-auto">Go shopping</a>
              {{else}}
              <a href="/" class="btn btn-dark mx-auto">Go shopping</a>
              {{/if}}
            </div>
          </section>
          {{/if}}
  </div>
</div>

<script>
  function changeQuantity(cartId, proId,userId, count ) {
    let quantity = parseInt(document.getElementById(proId).value)
    count = parseInt(count)
  console.log(userId)
    $.ajax({
      url: '/change-product-quantity',
      data: {
        user:userId,
        cart: cartId,
        product: proId,
        count: count,
        quantity: quantity
      },
      method: 'post',
      success: (response) => {
        if (response.removeProduct ) {
          Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
          }).then((result) => {
            if (result.isConfirmed) {
              Swal.fire(
                'Deleted!',
                'Your file has been deleted.',
                'success'
              )
              setTimeout(() => {
                location.reload()
              }, 1000)
            }
          })
        } else {
          document.getElementById(proId).value = quantity + count
          document.getElementById('total').innerHTML = response.total
        }
      }
    })
  }

  function removeProducts(cartID, ProID){
$.ajax({
    url:'/removeCartProduct',
    method:'post',
    data:{
        cartID:cartID,
        ProID:ProID
    },
    success:(response)=>{
      if(response.ProRemove){
        Swal.fire({
            position: "top-end",
            icon: "success",
            title: "Item Removed from Cart",
            showConfirmButton: false,
            timer: 1000,
          });
          location.reload(); 
      }
        
    }
})
}
</script>