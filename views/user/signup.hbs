<style>
    .bg-color{
          background-color:white;
          font-family: Arial, Helvetica, sans-serif;
      }
      .btn-rounded{
          border-radius: 30px;
      }
</style>
<body class="bg-color">
    <section class="container mt-5 mb-5">
        <div class="row justify-content-md-center">
            <form class="col-md-6 col-sm-12 bg-white p-5 rounded shadow" action="/signup" method="post">
                <div class="col-12 text-center">
                    <h3 class="text-dark" style="font-family: 'Fuzzy Bubbles', cursive;"><strong>REGISTER NOW</strong></h3>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label text-dark">First Name</label>
                    <input type="text" name="fname" class="form-control border-dark" id="name" required>
                </div>
                <div class="mb-3">
                    <label for="text" class="form-label text-dark">Email</label>
                    <input type="email" name="email" class="form-control border-dark" id="username" required>
                </div>
                <div class="mb-3">
                    <label for="text" class="form-label text-dark">Place</label>
                    <input type="text" name="place" class="form-control border-dark" id="address" required>
                </div>
                 <div class="mb-3">
                    <label for="text" class="form-label text-dark">Mobile</label>
                    <input type="text" name="mobile" class="form-control border-dark" id="mobile" required>
                </div>
                <div class="mb-3">
                    <label for="text" class="form-label text-dark">Password</label>
                    <input type="text" name="password" class="form-control border-dark" id="age" required>
                </div>

                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="terms">
                    <label class="form-check-label border-dark" for="terms">I agree terms and conditions.</label>
                </div>
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-dark w-75">Register Now</button>
                </div> 
            </form>
        </div>
    </section>
</body>