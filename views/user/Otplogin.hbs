<style>
    .bg-color {
        background-color: #f9fbfd;
        font-family: Arial, Helvetica,
            sans-serif;
    }

    .btn-rounded {
        border-radius: 30px;
    }
</style>

<body class='bg-color'>
    <section class='container mt-5 mb-5'>
        <div class='row justify-content-md-center'>
            <form class='col-md-6 col-sm-12 bg-white p-5 rounded shadow' action='/otplogin' method='post'>
                <div class='col-12 text-center'>
                    <h3 class='text-dark mb-4'>
                        <strong style="font-family: 'Fuzzy Bubbles', cursive;">
                            OTP FOR VERIFICATION
                        </strong>
                    </h3>
                </div>

                <div class='mb-3'>
                    <label for='text' class='form-label mb-3 text-dark'>
                        Enter OTP Here
                    </label>
                    <input type='number' value="{{phno}}" name='phno' class='form-control' hidden />
                    <input type='number' name='otp' class='form-control border-dark' id='username' />
                </div>
                <div class='text-center mt-3'>
                    <button type='submit' class='btn btn-dark w-75'>
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </section>
</body>